<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- *****************************-->
    <!-- общие -->
    <!-- *****************************-->

    <style name="Playlist_Background">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="TextView_Style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView_Style_gray">
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>


    <!-- *****************************-->
    <!-- activity main -->
    <!-- *****************************-->

    <style name="Button_Style_main" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:textColor">@color/yp_black</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="iconTint">@color/black</item>

        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_primary</item>
        <item name="cornerRadius">@dimen/radius_button</item>

    </style>

    <!-- *****************************-->
    <!-- activity settings  -->
    <!-- *****************************-->

    <style name="LinearLayout_Style_settings">
        <item name="android:background">@color/yp_white</item>
    </style>

    <style name="TextView_Style_settings">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_primary</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/panel_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Image_Style_settings">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/padding_primary</item>
        <item name="android:fillColor">@color/yp_text_gray</item>
    </style>

    <style name="Switch_Style_settings">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/panel_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- *****************************-->
    <!-- activity search  -->
    <!-- *****************************-->

    <style name="EditText_Style_search">
        <item name="android:background">@color/yp_light_gray</item>
    </style>

    <style name="Image_Style_search">
        <item name="android:background">@color/yp_light_gray</item>
    </style>

    <style name="Button_Style_search">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <style name="LinearLayout_Style_search">
        <item name="android:background">@color/yp_white</item>
    </style>

    <!-- *****************************-->
    <!-- activity audio player  -->
    <!-- *****************************-->

    <style name="LinearLayout_audio_player">
        <item name="android:background">@color/yp_white</item>
    </style>

    <style name="TextView_audio_player">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="TextView_audio_player_title">
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>


</resources>