<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Playlist_Background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="start"
        android:paddingLeft="@dimen/padding_primary"
        android:paddingTop="@dimen/padding_primary"
        android:text="@string/app_name"
        android:textSize="@dimen/primary_text_size"
        android:fontFamily="@font/ys_display_medium"

        android:textColor="@color/yp_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_primary">

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/search"
            app:icon="@drawable/search"
            style="@style/Button_Style_main"/>

        <Button
            android:id="@+id/button_library"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/library"
            app:icon="@drawable/library"
            style="@style/Button_Style_main"/>

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/settings"
            app:icon="@drawable/settings"
            style="@style/Button_Style_main"/>

    </LinearLayout>

</LinearLayout>