<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/track_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/margin_primary_dvd_2"
        android:src="@drawable/barsik" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_primary_dvd_2"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            style="@style/TextView_Style"
            android:id="@+id/track_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/panel_text_size"
            android:singleLine="true"
            tools:text="Here Comes The Sun (Remastered 2009) длинный текст" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Style_gray"
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/text_size_11"
                android:singleLine="true"
                tools:text="The Beatles" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:src="@drawable/dot" />

            <TextView
                style="@style/TextView_Style_gray"
                android:id="@+id/track_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/text_size_11"
                android:singleLine="true"
                tools:text="4:01" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_primary_dvd_2"
        android:src="@drawable/arrow_forward24" />


</LinearLayout>
